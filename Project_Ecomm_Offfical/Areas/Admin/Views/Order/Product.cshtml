@model IEnumerable<Project_Ecomm_Offical.Models.OrderDetails>

<div class="row">
    <div class="col-5">
        <h2>Pending Order</h2>
    </div>
  @*  <div class=" col-6 offset-1">
        <from method="post">
            <select name="products" asp-items="@(new SelectList(ViewBag.products,"Id","Title"))"></select>
        </from>
    </div>*@
    
</div>

<hr />
<table class="table table-bordered table-striped table-active">
    <thead>
        <tr>
            
            <th>Order Id</th>
            <th>Order Date</th>
            <th>Name</th>
            <th>State</th>
            <th>Order Status</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderHeader.Id</td>
                <td>@order.OrderHeader.OrderDate</td>
                <td>@order.OrderHeader.Name</td>
                <td>@order.OrderHeader.State</td>
                <td>@order.OrderHeader.OrderStatus</td>
                <td>@order.Price</td>
                <td>
                    <div>
                        <input type="checkbox" oninvalid="checkbox" name="orderIds" value="@order.Id" />
                        @*<label>@order.OrderHeader.PaymentStatus</label>*@
                    </div>
                </td>
                @*<td>
                    <a asp-action="Approved" asp-route-id="@order.OrderHeaderId" class="btn btn-info from-control">Deliver Order</a>
                </td>*@
            </tr>       
        }       
    </tbody>   
</table>
<div class="row">
    <div class="col-5">
        <a asp-action="submit" id="checkbox"   class="btn btn-info from-control"> Deliver Order</a>
    </div>

</div>

